<dt>
    <collapserow>
        <hc>
            <icon icon="cog" />
            <label text="PHP FPM" />
        </hc>
        <bind:dict bind="params">
            <vc>
                <formline text="{Min processes}">
                    <textbox bind="pm_min" type="integer" />
                </formline>
                <formline text="{Max processes}">
                    <textbox bind="pm_max" type="integer" />
                </formline>
            </vc>
        </bind:dict>
    </collapserow>
    <collapserow>
        <hc>
            <icon icon="cog" />
            <label text="PHP" />
        </hc>
        <bind:dict bind="params">
            <vc>
                <formline text="open_basedir">
                    <pathbox bind="php_open_basedir" directory="True" />
                </formline>
            </vc>
        </bind:dict>
    </collapserow>
</dt>
