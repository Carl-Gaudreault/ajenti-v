<dt filtering="False">
    <collapserow>
        <hc>
            <icon icon="cog" />
            <label text="PHP FPM" />
        </hc>
        <bind:dict bind="params">
            <vc>
                <formline text="{Min processes}">
                    <textbox bind="pm_min" type="integer" />
                </formline>
                <formline text="{Max processes}">
                    <textbox bind="pm_max" type="integer" />
                </formline>
            </vc>
        </bind:dict>
    </collapserow>
    <collapserow>
        <hc>
            <icon icon="cog" />
            <label text="PHP" />
        </hc>
        <bind:dict bind="params">
            <vc>
                <formline text="open_basedir">
                    <pathbox bind="php_open_basedir" directory="True" />
                </formline>
                <formline text="{PHP options}">
                    <codearea bind="php_admin_values" width="400" height="150" />
                </formline>
                <formline text="{PHP flags}">
                    <codearea bind="php_flags" width="400" height="150" />
                </formline>
            </vc>
        </bind:dict>
    </collapserow>
</dt>
