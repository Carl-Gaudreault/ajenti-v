<box binder:context="params">
    <vc>
        <formline text="{Script name}">
            <textbox bind="[script]" />
        </formline>
        <formline text="{Script's HTTP port}">
            <textbox bind="[port]" type="integer" />
        </formline>
        <formline text="{Environment}">
            <textbox bind="[environment]" />
        </formline>
    </vc>
</box>